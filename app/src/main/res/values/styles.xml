<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/app_bg</item>
    </style>


    <style name="LoginScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/login_screen_color</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/login_screen_color</item>
        <item name="colorControlNormal">#d3d3d3</item>
        <item name="colorControlActivated">#d3d3d3</item>
        <item name="colorControlHighlight">#d3d3d3</item>
    </style>
    
    <style name="SignUpScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/signup_screen_color</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/signup_screen_color</item>
        <item name="colorControlNormal">#d3d3d3</item>
        <item name="colorControlActivated">#d3d3d3</item>
        <item name="colorControlHighlight">#d3d3d3</item>
    </style>

    <style name="RecoveryScreenTheme" parent="LoginScreenTheme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/login_screen_toolbar_color</item>
        <item name="colorPrimaryDark">@color/login_screen_toolbar_color</item>
    </style>

    <style name="DashboardTheme" parent="AppTheme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
    </style>

    <style name="SecurityPinTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/holo_blue_dark</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/holo_blue_dark</item>
    </style>

</resources>
